{
  "i18n": true,
  "type": "tabs",
  "items": {
    "config": {
      "type": "panel",
      "label": {
        "de": "Konfiguration",
        "en": "Configuration"
      },
      "items": {
        "head": {
          "type": "header",
          "size": 3,
          "text": {
            "en": "Connection data to the database",
            "de": "Verbindungsdaten zur Datenbank"
          }
        },
        "ip": {
          "type": "text",
          "lg": 2,
          "md": 6,
          "sm": 12,
          "validator": "!!data.ip.length",
          "validatorErrorText": {
            "de": "Bitte geben Sie eine IP-Adresse ein",
            "en": "Please enter an IP address"
          },
          "validatorNoSaveOnError": true,
          "label": {
            "de": "IP-Adresse",
            "en": "IP Address"
          },
          "tooltip": {
            "en": "IP address of the database server",
            "de": "IP-Adresse des Datenbankservers"
          },
          "newLine": true
        },
        "user": {
          "lg": 2,
          "md": 6,
          "sm": 12,
          "type": "text",
          "validator": "!!data.user.length",
          "validatorErrorText": {
            "de": "Bitte geben Sie einen Benutzernamen ein",
            "en": "Please enter a username"
          },
          "tooltip": {
            "en": "Username for accessing the database",
            "de": "Benutzername für den Zugriff auf die Datenbank"
          },
          "validatorNoSaveOnError": true,
          "label": {
            "de": "Benutzername",
            "en": "Username"
          },
          "newLine": true
        },
        "password": {
          "type": "password",
          "lg": 2,
          "md": 6,
          "sm": 12,
          "validator": "!!data.password.length",
          "validatorErrorText": {
            "de": "Bitte geben Sie ein Passwort ein",
            "en": "Please enter a password"
          },
          "validatorNoSaveOnError": true,
          "label": {
            "de": "Passwort",
            "en": "Password"
          },
          "tooltip": {
            "de": "Passwort für den Zugriff auf die Datenbank",
            "en": "Password for accessing the database"
          },
          "newLine": false
        },
        "database": {
          "type": "text",
          "lg": 2,
          "md": 6,
          "sm": 12,
          "validator": "!!data.database.length",
          "validatorErrorText": {
            "de": "Bitte geben Sie einen Datenbanknamen ein",
            "en": "Please enter a database name"
          },
          "validatorNoSaveOnError": true,
          "label": {
            "de": "Datenbank",
            "en": "Database"
          },
          "tooltip": {
            "en": "Name of the database",
            "de": "Name der Datenbank"
          },
          "newLine": true
        },
        "head2": {
          "type": "header",
          "size": 3,
          "text": {
            "de": "Datenbank Einstellungen",
            "en": "Database settings"
          }
        },
        "timeZone": {
          "type": "text",
          "lg": 2,
          "md": 6,
          "sm": 12,
          "validator": "data.timeZone.length",
          "validatorErrorText": {
            "de": "Bitte korrigiere die Zeitzone",
            "en": "Please correct the timezone"
          },
          "validatorNoSaveOnError": true,
          "label": {
            "de": "Zeitzone",
            "en": "Time zone"
          },
          "tooltip": {
            "de": "Zeitzone der Datenbank",
            "en": "Time zone of the database"
          },
          "default": "0",
          "newLine": false,
          "help": {
            "de": "0 = Deaktiviert - Beispiel: +00:00",
            "en": "0 = Disabled - Example: +00:00"
          }
        },
        "tableSizeCron": {
          "lg": 2,
          "md": 6,
          "sm": 12,
          "type": "cron",
          "complex": true,
          "width": "10%",
          "min": 30,
          "validator": "data.tableSizeCron.length",
          "validatorErrorText": {
            "de": "Bitte legen Sie einen Zeitplan fest",
            "en": "Please set a schedule"
          },
          "newLine": true,
          "validatorNoSaveOnError": true,
          "label": {
            "en": "Schedule for updating the table size (MB)",
            "de": "Zeitplan fürs Updaten der Tabellengröße (MB)"
          },
          "tooltip": {
            "en": "Cron expression for the schedule",
            "de": "Cron-Ausdruck für den Zeitplan"
          },
          "attr": "tableSizeCron",
          "filter": false,
          "sort": true,
          "default": "0",
          "help": {
            "en": "0 = Deactivate",
            "de": "0 = Deaktiviert"
          }
        },
        "head3": {
          "type": "header",
          "size": 3,
          "text": {
            "de": "Einstellungen für Warnungen",
            "en": "Settings for warnings"
          }
        },
        "info": {
          "type": "checkbox",
          "title": {
            "en": "Delete",
            "de": "Löschen"
          },
          "attr": "info",
          "default": true,
          "tooltip": {
            "en": "Delete the old data",
            "de": "Alte Daten löschen"
          }
        },
        "warning": {
          "type": "number",
          "lg": 2,
          "md": 6,
          "sm": 12,
          "label": {
            "de": "Warnung ab (MB)",
            "en": "Warning from (MB)"
          },
          "default": 0,
          "newLine": false,
          "help": {
            "de": "0 = Deaktiviert",
            "en": "0 = Disabled"
          }
        },
        "error": {
          "type": "number",
          "lg": 2,
          "md": 6,
          "sm": 12,
          "label": {
            "de": "Error ab (MB)",
            "en": "Error from (MB)"
          },
          "default": 0,
          "newLine": true,
          "help": {
            "de": "0 = Deaktiviert",
            "en": "0 = Disabled"
          }
        }
      }
    },
    "global": {
      "type": "panel",
      "label": {
        "de": "Zeitpläne",
        "en": "Schedules"
      },
      "items": {
        "table": {
          "type": "table",
          "label": {
            "en": "Schedule",
            "de": "Zeitplan"
          },
          "items": [
            {
              "type": "cron",
              "complex": true,
              "width": "10%",
              "min": 30,
              "validator": "data.schedule.length",
              "validatorErrorText": {
                "de": "Bitte legen Sie einen Zeitplan fest",
                "en": "Please set a schedule"
              },
              "validatorNoSaveOnError": true,
              "title": {
                "en": "Schedule",
                "de": "Zeitplan"
              },
              "tooltip": {
                "en": "Cron expression for the schedule",
                "de": "Cron-Ausdruck für den Zeitplan"
              },
              "attr": "schedule",
              "filter": false,
              "sort": true,
              "default": ""
            },
            {
              "type": "number",
              "min": 30,
              "validator": "data.time >= 30",
              "validatorErrorText": {
                "de": "Bitte geben Sie einen Intervallbereich ein",
                "en": "Please enter a interval range"
              },
              "validatorNoSaveOnError": true,
              "title": {
                "en": "Time in seconds",
                "de": "Zeit in Sekunden"
              },
              "tooltip": {
                "en": "Interval in seconds",
                "de": "Intervall in Sekunden"
              },
              "attr": "time",
              "filter": false,
              "sort": true,
              "default": 60
            },
            {
              "type": "selectSendTo",
              "attr": "id",
              "width": "250px",
              "title": {
                "en": "ID",
                "de": "ID"
              },
              "tooltip": {
                "en": "ID of the datapoint in the database",
                "de": "ID des Datenpunktes in der Datenbank"
              },
              "command": "id",
              "data": {
                "subject1": 1,
                "data": "static"
              },
              "validator": "data.id",
              "validatorErrorText": {
                "de": "Bitte geben Sie eine ID ein",
                "en": "Please enter an id"
              },
              "validatorNoSaveOnError": true
            },
            {
              "type": "selectSendTo",
              "width": "300px",
              "validator": "data.tableFrom",
              "validatorErrorText": {
                "de": "Bitte geben Sie eine Quelltabelle ein",
                "en": "Please enter a source table"
              },
              "validatorNoSaveOnError": true,
              "title": {
                "en": "From table",
                "de": "Von Tabelle"
              },
              "command": "tableFrom",
              "attr": "tableFrom",
              "filter": false,
              "sort": true,
              "default": "",
              "tooltip": {
                "en": "Source table in the database",
                "de": "Quelltabelle in der Datenbank"
              }
            },
            {
              "type": "text",
              "width": "300px",
              "validator": "data.tableTo.length",
              "validatorErrorText": {
                "de": "Bitte geben Sie eine Zieltabelle ein",
                "en": "Please enter a target table"
              },
              "validatorNoSaveOnError": true,
              "title": {
                "en": "Target table",
                "de": "Ziel-Tabelle"
              },
              "attr": "tableTo",
              "filter": false,
              "sort": true,
              "default": "",
              "tooltip": {
                "en": "Target table in the database",
                "de": "Zieltabelle in der Datenbank"
              }
            },
            {
              "type": "text",
              "width": "100px",
              "title": {
                "en": "Unit",
                "de": "Einheit"
              },
              "attr": "unit",
              "filter": false,
              "sort": true,
              "default": ""
            },
            {
              "type": "number",
              "title": {
                "en": "Factor",
                "de": "Faktor"
              },
              "attr": "factor",
              "filter": false,
              "sort": true,
              "default": 1,
              "validator": "data.factor > 0",
              "validatorErrorText": {
                "de": "Bitte geben Sie einen Faktor ein",
                "en": "Please enter a factor"
              },
              "validatorNoSaveOnError": true,
              "tooltip": {
                "en": "Factor for the calculation",
                "de": "Faktor für die Berechnung"
              }
            },
            {
              "type": "number",
              "title": {
                "en": "Round decimal places",
                "de": "Decimal Stellen Runden"
              },
              "attr": "round",
              "filter": false,
              "min": 0,
              "step": 1,
              "sort": true,
              "default": 0,
              "validator": "data.round % 1 == 0",
              "validatorErrorText": {
                "de": "",
                "en": ""
              },
              "validatorNoSaveOnError": true,
              "tooltip": {
                "en": "Number of decimal places",
                "de": "Anzahl der Dezimalstellen"
              },
              "help": {
                "en": "0 = Deactivate",
                "de": "0 = Deaktiviert"
              }
            },
            {
              "type": "select",
              "title": {
                "en": "Operation",
                "de": "Operation"
              },
              "validator": "data.operation",
              "validatorErrorText": {
                "de": "Bitte wähle aus",
                "en": "Please select"
              },
              "validatorNoSaveOnError": true,
              "attr": "operation",
              "tooltip": {
                "en": "Operation for the calculation",
                "de": "Operation für die Berechnung"
              },
              "options": [
                {
                  "value": "dif",
                  "label": {
                    "en": "Difference",
                    "de": "Differenz"
                  }
                },
                {
                  "value": "avg",
                  "label": {
                    "en": "Average",
                    "de": "Durchschnitt"
                  }
                },
                {
                  "value": "sum",
                  "label": {
                    "en": "Sum",
                    "de": "Summe"
                  }
                },
                {
                  "value": "all",
                  "label": {
                    "en": "All",
                    "de": "Alles"
                  }
                }
              ]
            },
            {
              "type": "checkbox",
              "title": {
                "en": "Delete",
                "de": "Löschen"
              },
              "attr": "delete",
              "filter": false,
              "sort": true,
              "default": false,
              "tooltip": {
                "en": "Delete the old data",
                "de": "Alte Daten löschen"
              }
            },
            {
              "type": "checkbox",
              "title": {
                "en": "Write Zero",
                "de": "Schreibe Null-Werte"
              },
              "attr": "writeZero",
              "filter": false,
              "sort": true,
              "default": true,
              "tooltip": {
                "en": "Write zero values",
                "de": "Schreibe Null-Werte"
              }
            },
            {
              "type": "checkbox",
              "title": {
                "en": "Active",
                "de": "Aktiv"
              },
              "attr": "active",
              "filter": false,
              "sort": true,
              "default": true,
              "tooltip": {
                "en": "Activate the schedule",
                "de": "Aktiviere den Zeitplan"
              }
            },
            {
              "type": "number",
              "title": {
                "en": "Retention time",
                "de": "Aufbewahrungszeit"
              },
              "attr": "retentionValue",
              "filter": false,
              "sort": true,
              "default": 0,
              "tooltip": {
                "en": "Retention time for the data",
                "de": "Aufbewahrungszeit für die Daten"
              }
            },
            {
              "type": "select",
              "title": {
                "en": "Retention time unit",
                "de": "Aufbewahrungszeit Einheit"
              },
              "validator": "!data.retentionValue || (data.retentionValue && data.retentionUnit)",
              "validatorErrorText": {
                "de": "Bitte wähle aus",
                "en": "Please select"
              },
              "validatorNoSaveOnError": true,
              "attr": "retentionUnit",
              "tooltip": {
                "en": "Retention time unit for the data",
                "de": "Aufbewahrungszeiteinheit für die Daten"
              },
              "options": [
                {
                  "value": "hours",
                  "label": {
                    "en": "Hours",
                    "de": "Stunden"
                  }
                },
                {
                  "value": "days",
                  "label": {
                    "en": "Days",
                    "de": "Tage"
                  }
                },
                {
                  "value": "weeks",
                  "label": {
                    "en": "Weeks",
                    "de": "Wochen"
                  }
                },
                {
                  "value": "months",
                  "label": {
                    "en": "Months",
                    "de": "Monate"
                  }
                },
                {
                  "value": "years",
                  "label": {
                    "en": "Years",
                    "de": "Jahre"
                  }
                }
              ]
            }
          ]
        },
        "desciption": {
          "type": "staticText",
          "text": {
            "en": "The target table can be freely selected, if it does not exist it will be created",
            "de": "Die Zieltabelle kann frei gewählt werden, wenn diese nicht existiert, wird sie erstellt"
          }
        }
      }
    }
  }
}
