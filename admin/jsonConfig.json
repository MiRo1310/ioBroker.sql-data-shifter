{
  "i18n": true,
  "type": "tabs",
  "items": {
    "config": {
      "type": "panel",
      "label": {
        "de": "Konfiguration",
        "en": "Configuration"
      },
      "items": {
        "ip": {
          "type": "text",
          "lg": 2,
          "md": 6,
          "sm": 12,
          "label": {
            "de": "IP-Adresse",
            "en": "IP Address"
          },
          "newLine": true
        },
        "user": {
          "lg": 2,
          "md": 6,
          "sm": 12,
          "type": "text",
          "label": {
            "de": "Benutzername",
            "en": "Username"
          },
          "newLine": true
        },
        "password": {
          "type": "password",
          "lg": 2,
          "md": 6,
          "sm": 12,
          "label": {
            "de": "Passwort",
            "en": "Password"
          },
          "newLine": false
        },
        "database": {
          "type": "text",
          "lg": 2,
          "md": 6,
          "sm": 12,
          "label": {
            "de": "Datenbank",
            "en": "Database"
          },
          "newLine": true
        }
      }
    },
    "global": {
      "type": "panel",
      "label": {
        "de": "Zeitpläne",
        "en": "Schedules"
      },
      "items": {
        "table": {
          "type": "table",
          "label": {
            "en": "Schedule",
            "de": "Zeitplan"
          },
          "items": [
            {
              "type": "cron",
              "complex": true,
              "width": "15%",
              "title": {
                "en": "Schedule",
                "de": "Zeitplan"
              },
              "attr": "schedule",
              "filter": false,
              "sort": true,
              "default": ""
            },
            {
              "type": "text",
              "width": "10%",
              "title": {
                "en": "ID",
                "de": "ID"
              },
              "attr": "id",
              "filter": false,
              "sort": true,
              "default": ""
            },
            {
              "type": "text",
              "width": "20%",
              "title": {
                "en": "From table",
                "de": "Von Tabelle"
              },
              "attr": "tableFrom",
              "filter": false,
              "sort": true,
              "default": ""
            },
            {
              "type": "text",
              "width": "20%",
              "title": {
                "en": "Target table",
                "de": "Ziel-Tabelle"
              },
              "attr": "tableTo",
              "filter": false,
              "sort": true,
              "default": ""
            },
            {
              "type": "select",
              "label": {
                "en": "Please select",
                "de": "Bitte auswählen"
              },
              "title": {
                "en": "Operation",
                "de": "Operation"
              },
              "attr": "operation",
              "options": [
                {
                  "value": "dif",
                  "label": {
                    "en": "Difference",
                    "de": "Differenz"
                  }
                },
                {
                  "value": "avg",
                  "label": {
                    "en": "Average",
                    "de": "Durchschnitt"
                  }
                },
                {
                  "value": "sum",
                  "label": {
                    "en": "Sum",
                    "de": "Summe"
                  }
                }
              ]
            },
            {
              "type": "checkbox",
              "title": {
                "en": "Delete",
                "de": "Löschen"
              },
              "attr": "delete",
              "filter": false,
              "sort": true,
              "default": ""
            }
          ]
        }
      }
    }
  }
}
